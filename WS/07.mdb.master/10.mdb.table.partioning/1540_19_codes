Before trying the example:

\W
CREATE TABLE article (
	id INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
	date DATE NOT NULL,
	author VARCHAR(100),
	language TINYINT UNSIGNED,
	text TEXT,
	PRIMARY KEY (id, date)
)
	ENGINE = InnoDB
PARTITION BY RANGE (YEAR(date)) (
	PARTITION p0 VALUES LESS THAN (1990),
	PARTITION p1 VALUES LESS THAN (2000),
	PARTITION p3 VALUES LESS THAN (2010),
	PARTITION current VALUES LESS THAN (2020)
);
CREATE TABLE recent_article LIKE article;
ALTER TABLE recent_article REMOVE PARTITIONING;
ALTER TABLE article 
    EXCHANGE PARTITION current 
    WITH TABLE recent_article;
CREATE OR REPLACE TABLE recent_article 
    SELECT * FROM article PARTITION (current);
